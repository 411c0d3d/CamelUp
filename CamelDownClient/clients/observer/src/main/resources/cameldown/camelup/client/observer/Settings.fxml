                                                   prefWidth="40.0">
                                            <Rectangle fx:id="background1" arcHeight="20" arcWidth="20" fill="#ddd"
                                                       height="20.0" width="40.0"/>
                                            <Circle fx:id="slider1" fill="#fff" radius="10.0"
