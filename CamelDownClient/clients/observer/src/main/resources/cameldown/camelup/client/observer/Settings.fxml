                        <GridPane GridPane.columnIndex="2">
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
